<%- include('layout') %>





<section class="section">
    <div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm ">
            <a href="/">
                <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
            </a>
            <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Inscription</h2>

            <% if (typeof errorMessage !== 'undefined') { %>
                <div class="mt-6 bg-red-100 border-l-4 border-red-500 text-red-700 p-4">
                    <%= errorMessage %>
                </div>
            <% } %>

            <form class="mt-8 space-y-6" action="/register" method="POST">
                <div>
                    <label for="username" class="block text-sm font-medium leading-5 text-gray-900">Nom d'utilisateur</label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <input id="username" name="username" type="email" required class="block w-full py-3 px-4 rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                </div>
                <div>
                    <label for="password" class="block text-sm font-medium leading-5 text-gray-900">Mot de passe</label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <input id="password" name="password" type="password" required class="block w-full py-3 px-4 rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                    </div>
                </div>
                <div class="form-group">
                    <label for="estAgentImmobilier" class="block text-sm font-medium leading-5 text-gray-900">RÃ´le</label>
                    <div class="mt-1 relative rounded-md shadow-sm">
                        <select id="estAgentImmobilier" name="role" required class="form-select w3-white py-3 px-4 block w-full leading-5 transition duration-150 ease-in-out sm:text-sm sm:leading-5">
                            <option value="USER">Simple Visiteur</option>
                            <option value="AGENT">Agent immobilier</option>
                        </select>
                    </div>
                </div>
                <div>
                    <span class="block w-full rounded-md shadow-sm">
                        <button type="submit" class="form-button w-full inline-flex justify-center py-3 px-6 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-800 transition ease-in-out duration-150">
                            S'inscrire
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>
</section>

<%- include('footer.ejs')%>